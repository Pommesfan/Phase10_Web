# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET     /                           controllers.Phase10WebController.phase10

GET     /set_players                controllers.Phase10WebController.set_players(p1?="", p2?="", p3?="", p4?="")

GET     /about                      controllers.Phase10WebController.about

GET     /help                       controllers.Phase10WebController.help


GET     /new_card/                  controllers.Phase10WebController.new_card(card_index?="")

GET     /open_card/                 controllers.Phase10WebController.open_card(card_index?="")

GET     /no_discard                 controllers.Phase10WebController.no_discard()

GET     /discard                    controllers.Phase10WebController.discard(card_indices?="")

GET     /no_inject                  controllers.Phase10WebController.no_inject()

GET     /inject                     controllers.Phase10WebController.inject(receiving_player?="", cardIndex?="", stashIndex?="", position?="")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
