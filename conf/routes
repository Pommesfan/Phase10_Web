# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET     /                           controllers.Phase10WebController.phase10

GET     /help                       controllers.Phase10WebController.help

GET     /about                      controllers.Phase10WebController.about

+nocsrf
POST    /no_inject                  controllers.Phase10WebController.no_inject()

+nocsrf
POST    /inject                     controllers.Phase10WebController.inject()

+nocsrf
POST    /switch_cards               controllers.Phase10WebController.switch_cards()

+nocsrf
POST    /set_players                controllers.Phase10WebController.set_players()

+nocsrf
POST    /discard                    controllers.Phase10WebController.discard()

+nocsrf
POST    /no_discard                 controllers.Phase10WebController.no_discard()

GET     /reset                      controllers.Phase10WebController.reset()

GET     /websocket                  controllers.Phase10WebController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
