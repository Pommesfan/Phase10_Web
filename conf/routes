# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Controller for Sudoku

GET     /                           controllers.Phase10WebController.phase10

GET     /help                       controllers.Phase10WebController.help

GET     /about                      controllers.Phase10WebController.about

+nocsrf
POST    /post_no_inject             controllers.Phase10WebController.post_no_inject()

+nocsrf
POST    /post_inject                controllers.Phase10WebController.post_inject()

+nocsrf
POST    /post_switch_cards          controllers.Phase10WebController.post_switch_cards()

+nocsrf
POST    /post_set_players           controllers.Phase10WebController.post_set_players()

+nocsrf
POST    /post_discard               controllers.Phase10WebController.post_discard()

+nocsrf
POST    /post_no_discard            controllers.Phase10WebController.post_no_discard()

GET     /reset                      controllers.Phase10WebController.reset()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
